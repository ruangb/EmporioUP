@model EmporioUP.Models.Funcionario

@{
    ViewBag.Title = "DeletarFuncionario";
}

<h2>Excluir funcionário</h2>
<hr />
<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="/Funcionario/Funcionario_Deleta">
        <dl class="dl-horizontal">
            <dt>
                Código do funcionário
            </dt>
            <dd>
                @Html.HiddenFor(model => model.id_funcionario)
                @Html.DisplayFor(model => model.id_funcionario)
            </dd>
            <br>
            <dt>
                Nome do funcionário
            </dt>
            <dd>
                @Html.DisplayFor(model => model.nome)
            </dd>
            <br>
            <dt>
                E-mail do funcionário
            </dt>
            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>
            <br>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Deseja deletar o funcionário?')">Deletar</button>
                </div>
            </div>
        </dl>
    </form>
</div>
<hr />
<button type="submit" class="btn btn-default" style="border-color:steelblue;">
    <i class="glyphicon glyphicon-chevron-left" style="color:steelblue;"></i>
    @Html.ActionLink("Voltar à lista de funcionários", "Funcionarios")
</button>
@section scripts{
    <link rel="stylesheet" href="https://getbootstrap.com/dist/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
}
