@model EmporioUP.Models.Funcionario

@{
    ViewBag.Title = "FuncionarioEditar";
}

<h2>Editar informações do funcionário</h2>
<hr />
<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="/Funcionario/Funcionario_Atualiza">
        <dl class="dl-horizontal">
            <dt>
                Código do funcionário
            </dt>
            <dd>
                @Html.HiddenFor(model => model.id_funcionario)
                @Html.DisplayFor(model => model.id_funcionario)
            </dd>
            <br>
            <dt>
                Nome do funcionário
            </dt>
            <dd>
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </dd>
            <br>
            <dt>
                E-mail do funcionário
            </dt>
            <dd>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </dd>
            <br>
            <dd>
                @Html.HiddenFor(model => model.senha)
            </dd>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>
        </dl>
    </form>
</div>
<hr />
<button type="submit" class="btn btn-default" style="border-color:steelblue;">
    <i class="glyphicon glyphicon-chevron-left" style="color:steelblue;"></i>
    @Html.ActionLink("Voltar à lista de funcionários", "Funcionarios")
</button>

@section scripts{
    <link rel="stylesheet" href="https://getbootstrap.com/dist/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
}
