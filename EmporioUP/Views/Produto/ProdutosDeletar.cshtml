@model EmporioUP.Models.Produto

@{
    ViewBag.Title = "ProdutosDeletar";
}
<h2>Detalhes do produto</h2>
<form class="form-horizontal" role="form" method="post" action="/Produto/Produto_Deleta">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.HiddenFor(model => model.id_produto)
                @Html.DisplayNameFor(model => model.id_produto)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.id_produto)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.descricao)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.info)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.info)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.categoria)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.categoria)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.valor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.valor)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.img)
            </dt>
            <dd>
                <img src="@Url.Content(Model.img)" />
            </dd>
            <br />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Deseja excluir o produto?')">Deletar</button>
                </div>
            </div>
        </dl>
    </div>
</form>
<hr />
<button type="submit" class="btn btn-default" style="border-color:steelblue;">
    <i class="glyphicon glyphicon-chevron-left" style="color:steelblue;"></i>
    @Html.ActionLink("Voltar à lista de produtos", "Produtos")
</button>


