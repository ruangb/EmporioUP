@model EmporioUP.Models.Cliente
@{
    ViewBag.Title = "Editar";
}

<h2>Editar informações do cliente</h2>
<hr />
<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="/Cliente/Cliente_Atualiza_2">
        <dl class="dl-horizontal">
            <dt>
                Código do cliente
            </dt>
            <dd>
                @Html.HiddenFor(model => model.id_cliente)
                @Html.DisplayFor(model => model.id_cliente)
            </dd>
            <br>
            <dt>
                Nome do cliente
            </dt>
            <dd>
                @Html.TextBoxFor(model => model.nome, new { @class= "form-control" })
            </dd>
            <br>
            <dt>
                CPF do cliente
            </dt>
            <dd>
                @Html.TextBoxFor(model => model.cpf, new { @class = "form-control" })
            </dd>
            <br>
            <dt>
                Data de adesão
            </dt>
            <dd>
                @Html.DisplayFor(model => model.dataAdesao)
            </dd>
            <br>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>
        </dl>
    </form>
</div>
<hr />
<button type="submit" class="btn btn-default" style="border-color:steelblue;">
    <i class="glyphicon glyphicon-chevron-left" style="color:steelblue;"></i>
    @Html.ActionLink("Voltar à lista de clientes", "Clientes")
</button>
